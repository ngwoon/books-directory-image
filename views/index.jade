extends layout

block css
  link(rel='stylesheet', href='/stylesheets/index.css')
  link(rel='stylesheet', href='/stylesheets/search_bar.css')
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
  
block content
  .wrap
    h1.title= title
    .greeting Welcome. Please search for a book.
    form(action="#").js-search-form
      .search
        input.searchTerm.js-searchTerm(type="text", name="searchTerm", placeholder="What are you looking for?")
        button.searchButton(type="submit")
          i.fa.fa-search

    .user-check
        if !authenticated
            a(href="/session")
                | 로그인 하시려면 이쪽으로..
        else
            | #{authenticated} 님. 환영합니다.
            br
            form(action="session" method="post")
                input(type="hidden" name="_method" value="DELETE")
                a(onclick="this.parentNode.submit();")
                    | 로그아웃

block script
    script(src="/javascripts/index.js")